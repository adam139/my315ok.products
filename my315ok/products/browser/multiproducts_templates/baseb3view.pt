<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="my315ok.products">
<head>
    <metal:block fill-slot="style_slot">
			<link rel="stylesheet" type="text/css" href="http://images.315ok.org/lightbox2-master/css/lightbox.css" media="screen" />           
      
     <!--  <link rel="stylesheet" type="text/css" 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="href string:${navroot}/++resource++my315ok.products/multiproducts.css"
            /> -->
    </metal:block>
</head>      
<body>
<metal:main fill-slot="content-core">
    <tal:main-macro metal:define-macro="content-core">
		 <div tal:define="imglists python: view.mainimage(fieldname='image');
		 	                loop python:imglists['preview'];		 	
		 								 total python:len(loop);
		 	                Batch python:modules['Products.CMFPlone'].Batch;
		 	                cols python:view.PerRowPrdtNum;
		 	                b_size python:view.PerPagePrdtNum;
		 	                b_start python:0;
		 	                b_start request/b_start | b_start;"
		 	     tal:omit-tag=""
		 	     tal:condition="total">
		 <div tal:define="batch python:Batch(loop,b_size, int(b_start), orphan=0);"
		 		  tal:omit-tag="">
		 <div class="row" metal:use-macro="context/batch_macros/macros/navigation" />       
        <div class="row" 
        	
        	tal:repeat = "row python:view.rows_perpage()">
        	<div tal:repeat="col python:range(cols)" tal:omit-tag="">
             <div tal:define="r repeat/row/index;
             									c repeat/col/index;
             									k python:r * cols + c;
             									j python:k + b_start;
             								  disp python:(k < b_size) and (j < total)"
             			class="proditem"
             			tal:attributes="class python:view.col_class()">            	
        			<div tal:omit-tag="" tal:condition="disp">
		        <h2 class="title">
		        	<a tal:content="python: imglists['title'][j]" tal:attributes="href python:imglists['imgurl'][j]">title</a>
              </h2>					 
              <div class="row">
              <div class="col-md-4" tal:condition="exists:python:imglists['large'][j]">
              <a tal:attributes="href python:imglists['large'][j]" data-lightbox="lightbox" tal:content="structure python:imglists['preview'][j]"></a>
              </div>
		       <div class="col-md-8 text-left"  tal:condition="exists:python:view.overview(j)"
               tal:content="structure python:view.overview(j)" >
		       </div> <!-- end overview-->	
		       </div>       	        	       
            </div> <!--end of define-->
            </div>
          </div> <!--end of col define-->           
           
		     </div> <!-- end of row define-->

		 </div><!--end of batch define -->	   
		 </div><!--end of imglists define batch -->
    </tal:main-macro>
</metal:main>
<metal:js fill-slot="javascript_bottom_slot">
<script type="text/javascript" tal:attributes="src string:http://images.315ok.org/lightbox2-master/js/lightbox.min.js" />
<script type="text/javascript">
$(function() {
	$('a.lightbox').lightBox(
{
	overlayBgColor: '#FFF',
	overlayOpacity: 0.6,
	imageLoading: 'http://images.315ok.org/images/lightbox-ico-loading.gif',
	imageBtnClose: 'http://images.315ok.org/images/lightbox-btn-close.gif',
	imageBtnPrev: 'http://images.315ok.org/images/lightbox-btn-prev.gif',
	imageBtnNext: 'http://images.315ok.org/images/lightbox-btn-next.gif',
	containerResizeSpeed: 350,
	txtImage: '图片',
	txtOf: '总共'	
   }	
	); 
});
</script>

</metal:js>
</body>
</html>
